clc;
close all;
clear all;
fm = 25;
b = 10;
t = 0 : 0.0001 : 0.25;
m = cos(2*pi*fm*t);
subplot(3,1,1);
plot(t,m);
xlabel('time(s)');ylabel('Amplitude');
title('Message Signal');
grid on;
fc = 400;
c = sin(2*pi*fc*t);
subplot(3,1,2);
plot(t,c);
xlabel('time(s)');ylabel('Amplitude');
title('Carrer Signal');
grid on;
y =sin(2*pi*fc*t+(b.*sin(2*pi*fm*t)));
subplot(3,1,3);
plot(t,m);
xlabel('time(s)');ylabel('Amplitude');
title('FM Signal');
grid on;
